<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Bible defaults"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="siswati"
            android:entries="@array/default_database_entries"
            android:entryValues="@array/default_database_values"
            app:icon="@drawable/ic_menu_settings"
            app:key="database"
            app:title="Default database"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory
        app:title="App Settings"
        app:iconSpaceReserved="false">

        <ListPreference
            app:icon="@drawable/ic_settings_text_size"
            app:defaultValue="18"
            android:entries="@array/text_size_entries"
            app:entryValues="@array/text_size_values"
            app:key="text_size"
            app:title="Text Default Size"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            app:icon="@drawable/ic_settings_theme"
            app:key="dark_mode"
            app:title="Theme"
            app:useSimpleSummaryProvider="true"
            app:summary="Toggle dark mode." />

    </PreferenceCategory>
</PreferenceScreen>